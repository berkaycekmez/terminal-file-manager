{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug file_manager",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/file_manager", 
            "args": [], 
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false, 
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb", 
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}